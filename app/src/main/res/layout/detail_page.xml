<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Contacts"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/feed_item_padding_left_right"
        android:paddingTop="@dimen/feed_item_padding_top_bottom"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        android:paddingRight="@dimen/feed_item_padding_left_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:onClick="returnButton"/>

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/feed_item_padding_left_right"
        android:layout_marginTop="@dimen/feed_item_padding_left_right"
        android:src="@drawable/edit_contact"
        android:onClick="editContact"/>

    <ImageView
        android:id="@+id/contact_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/contact_picture"
        android:layout_below="@+id/back_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/feed_item_padding_left_right"/>
    
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_toRightOf="@+id/contact_photo"
        android:layout_below="@+id/back_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/feed_item_padding_left_right"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/c_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collin Klenke"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/contact_photo"
        android:layout_marginLeft="@dimen/feed_item_padding_left_right"
        android:layout_marginTop="5dp"
        android:textSize="21sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company:"
        android:layout_toRightOf="@+id/contact_photo"
        android:layout_below="@+id/c_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/feed_item_padding_left_right"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/c_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hopefully Solstice"
        android:layout_toRightOf="@+id/contact_photo"
        android:layout_below="@+id/company"
        android:layout_marginLeft="@dimen/feed_item_padding_left_right"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="21sp"/>


</RelativeLayout>